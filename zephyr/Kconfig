	string
	default "${ZEPHYR_ALIF_MODULE_DIR}/linker_add_rom_symbols.ld"

endif # ALIF_ROM_INCLUDED

source "$(ZEPHYR_ALIF_MODULE_DIR)/lc3/zephyr/Kconfig"
